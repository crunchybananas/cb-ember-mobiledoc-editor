<div class="container">
  <div>
    <h4>Card Example</h4>
    <Mobiledoc::Editor
      @content={{this.content}}
      @postDidChange={{this.postDidChange}}
      @editorDidLoad={{this.editorDidLoad}}
      @cards={{this.cards}}
      @atoms={{this.atoms}}
    >
      <:toolbar as |toolbar|>
        <div class="toolbar">
          <button type="button" {{on "click" (fn toolbar.insertCard "image")}}>Insert Card</button>
          <button type="button" {{on "click" (fn toolbar.insertAtom "mention")}}>Insert Atom</button>
        </div>
      </:toolbar>
    </Mobiledoc::Editor>
  </div>
  <div>
    <h4>Toolbar JSON Content</h4>
    <div class="json-content">
      {{this.jsonContent}}
    </div>
  </div>
</div>